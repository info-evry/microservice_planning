{
    "env": {
        "doc": "The application environment.",
        "format": ["prod", "dev", "test"],
        "default": "prod",
        "arg": "env",
        "env": "NODE_ENV"
    },
    "ip": {
        "doc": "The IP address to bind.",
        "format": "ipaddress",
        "default": "127.0.0.1",
        "env": "IP_ADDRESS"
    },
    "host": {
        "doc": "The host.",
        "format": "String",
        "default": "127.0.0.1",
        "env": "HOST"
    },
    "port": {
        "doc": "The port to bind.",
        "format": "port",
        "default": 3000,
        "env": "PORT",
        "arg": "port"
    }
}
