{
    "compilerOptions": {
        "esModuleInterop": true,
        "outDir": "dist",
        "target": "es2015",
        "strict": false,
        "module": "CommonJS",
        "moduleResolution": "node"
    },
    "include": ["src/**/*", "docs/**/*"],
    "exclude": ["node_modules"],
    "typeRoots": ["src/@types", "node_modules/@types"],
    "lib": ["es5", "es6"]
}
